<UserControl x:Class="PowerPointLabs.FYP.FYPMainWPF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PowerPointLabs.FYP.Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TabControl x:Name="tabControl" Grid.Row="0">
            <TabItem Header="BlockView" Height="50">
                <TabItem.Content>
                    <local:BlockPageView x:Name="blockView"/>
                </TabItem.Content>
            </TabItem>
            <TabItem Header="PPTLabsView" Height="50">
                <TabItem.Content>
                    <local:PPTLabsPageView x:Name="labView"/>
                </TabItem.Content>
            </TabItem>
        </TabControl>
        <Button Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Right" Content="Sync" 
                Width="80" Margin="0 20 20 0" Padding="2"
                Click="Button_Click"/>
    </Grid>
</UserControl>
