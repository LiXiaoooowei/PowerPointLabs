<UserControl x:Class="PowerPointLabs.FYP.Views.BlockPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PowerPointLabs.FYP.Data"
             xmlns:views="clr-namespace:PowerPointLabs.FYP.Views"
             xmlns:converters="clr-namespace:PowerPointLabs.FYP.Converters"
             mc:Ignorable="d" 
             views:InnerBlockListView.UpBtnClickedHandlerParent="HandleUpBtnClickedEvent"
             views:InnerBlockListView.DownBtnClickedHandlerParent="HandleDownBtnClickedEvent"
             d:DesignHeight="600" d:DesignWidth="550" Loaded="UserControl_Loaded">
    <Grid>
        <ListView x:Name="listView" ItemsSource="{Binding BlockItems}" AlternationCount="{Binding BlockItems.Count}"
                  BorderThickness="0" Margin="0" SelectionMode="Single"
                  PreviewMouseLeftButtonDown="ListView_PreviewMouseLeftButtonDown">
            <ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type local:BlockItem}">
                    <Border BorderThickness="0.25" BorderBrush="Black">
                        <StackPanel Margin="2 2 2 2">
                            <Label Content="{Binding
                                Path=.,
                                Converter={converters:BlockItemIndexConverter},
                                RelativeSource={RelativeSource FindAncestor, 
                                         AncestorType={x:Type ListViewItem}}}" />
                            <views:InnerBlockListView DataContext="{Binding}"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
