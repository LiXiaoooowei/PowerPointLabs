<UserControl x:Class="PowerPointLabs.FYP.Views.LabAnimationItemCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PowerPointLabs.FYP.Views"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" Text="{Binding Text}" MaxWidth="290" Width="290"
                 TextWrapping="Wrap" FontSize="10" />
        <StackPanel Grid.Column="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20" />
                </Grid.RowDefinitions>
                <CheckBox Grid.Column="0" Grid.Row="0" IsChecked="{Binding IsCaption, Mode=TwoWay}" FontSize="8" Content="Caption"
                          VerticalContentAlignment="Center" />
                <CheckBox Grid.Column="1" Grid.Row="0" IsChecked="{Binding IsCallout, Mode=TwoWay}" FontSize="8" Content="Callout"
                          VerticalContentAlignment="Center"/>

                <CheckBox Grid.Column="0" Grid.Row="1" IsChecked="{Binding IsCloudVoice, Mode=TwoWay}" FontSize="8"
                              Content="CloudVoice" VerticalContentAlignment="Center" />
                <CheckBox Grid.Column="1" Grid.Row="1" IsChecked="{Binding IsBuiltInVoice, Mode=TwoWay}" FontSize="8"
                          Content="BuiltInVoice" VerticalContentAlignment="Center" /> 
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
