<UserControl x:Class="PowerPointLabs.FYP.Views.InnerBlockListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PowerPointLabs.FYP.Data"
             xmlns:views="clr-namespace:PowerPointLabs.FYP.Views"
             mc:Ignorable="d"
             Loaded="UserControl_Loaded">
    <ListView x:Name="listBox" ItemsSource="{Binding Items}"
                      BorderThickness="0" Margin="0" SelectionMode="Single">
        <ListBox.Resources>
            <DataTemplate DataType="{x:Type local:CustomAnimationItem}">
                <views:CustomAnimationItemCard DataContext="{Binding}" />
            </DataTemplate>
            <DataTemplate DataType="{x:Type local:LabAnimationItem}">
                <views:LabAnimationItemCard DataContext="{Binding}"/>
            </DataTemplate>
        </ListBox.Resources>
    </ListView>
</UserControl>
